<!-- main.html -->

<!DOCTYPE html>
<html lang="ko-KR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>예약페이지</title>
    <link rel="stylesheet" href="./css/reserveStyles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  </head>
  <body>
    <header>
      <a href="javascript:window.history.back();"
        ><span class="arrow-prev"></span
      ></a>
      <h3 class="title">예약 등록하기</h3>
    </header>
    <main>
      <form id="reserveForm">
        <fieldset>
          <legend>출발지</legend>
          <input
            id="departure"
            name="departure"
            type="text"
            placeholder="출발지"
            class="input"
            maxlength="10"
            required
          />
          <label for="name" class="label"></label>
        </fieldset>

        <fieldset>
          <legend>비밀번호</legend>
          <input
            id="password"
            name="password"
            type="password"
            placeholder="비밀번호"
            class="input"
            maxlength="10"
            required
          />
          <label for="password" class="label"></label>
        </fieldset>

        <fieldset>
          <legend>차량번호</legend>
          <input
            id="carNumber"
            name="carNumber"
            type="text"
            placeholder="예)10가 1234"
            pattern="[0-9]{2,3} [ㄱ-ㅎ|ㅏ-ㅣ|가-힣]{1} [0-9]{4}"
            class="input"
            required
            maxlength="9"
          />
          <label for="carNumber" class="label"></label>
        </fieldset>

        <fieldset>
          <legend>전화번호</legend>
          <input
            id="phoneNumber"
            name="phoneNumber"
            type="tel"
            oninput="autoHyphen(this)"
            pattern="[0-9]{3}-[0-9]{3,4}-[0-9]{4}"
            placeholder="010-1234-5678"
            class="input"
            required
            maxlength="13"
          />
        </fieldset>

        <fieldset id="pallete-field">
          <legend>파레트 수량</legend>
          <input
            id="amountPallet"
            name="amountPallet"
            type="number"
            placeholder="10"
            class="input"
            required
            maxlength="number"
            min="0"
          />
          <label for="pallete" class="label">개</label>
        </fieldset>

        <fieldset>
          <legend>차종</legend>
          <select class="select-field" id="carType" name="carType">
            <option value="1t">1t</option>
            <option value="2.5t">2.5t</option>
            <option value="3.5t">3.5t</option>
            <option value="5t">5t</option>
            <option value="11t">11t</option>
            <option value="컨테이너">컨테이너</option>
          </select>
          <label for="carType" class="label"></label>
        </fieldset>

        <fieldset>
          <legend>상차/하차</legend>
          <select class="select-field">
            <option value="up">상차</option>
            <option value="down">하차</option>
          </select>
          <label for="upDown" class="label"></label>
        </fieldset>

        <fieldset>
          <legend>날짜</legend>
          <input
            id="date"
            name="date"
            type="text"
            placeholder="2022-04-03 (20:00)"
            class="input"
            required
          />
          <label for="date" class="label"></label>
        </fieldset>

        <button type="button" class="submitButton" onclick="reserveBtn()">예약등록하기</button>
      </form>
    </main>

    <script src="./js/regex.js"></script>
    <!-- <script src="./js/addItem.js"></script> -->
    <script src="./js/flatpickr.js"></script>
    <script>
      // const api = 'reserve'

    function reserveBtn() {
        console.log('start coupang reserve')
        
        $.ajax({
            type: "POST",
            url: "http://3.37.129.143"+"/reservation",
            data: {
                type: 'coupang',
                departure: $('#departure').val(),
                password: $('#password').val(),
                carNumber: $('#carNumber').val(),
                phoneNumber: $('#phoneNumber').val(), 
                amountPallet: $('#amountPallet').val(), 
                carType: $('#carType').val(), 
                DateAndTime: $('#date').val(),
            },
            success: function (response) {
              console.log('예약 완료')
                alert("예약 완료")
                window.location.href("/admin");
            },
            error: function (error) {
                alert(error.responseJSON.errorMessage);
            },
        });
    }
</script>
  </body>
</html>
